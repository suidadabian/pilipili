<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.suidadabian.lixiaofeng.pilipili.common.view.RectangleImageView
        android:id="@+id/upload_picture_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:id="@+id/upload_picture_edit_ibtn"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_centerInParent="true"
        android:background="@color/light_transparent_black"
        android:padding="@dimen/dimen_8dp"
        android:src="@drawable/icon_edit"
        android:tint="@color/selector_upload_info_picture_edit_icon_color"/>
</RelativeLayout>