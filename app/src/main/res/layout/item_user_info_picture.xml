<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dimen_16dp"
    android:layout_marginVertical="@dimen/dimen_8dp"
    app:cardCornerRadius="@dimen/dimen_2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.suidadabian.lixiaofeng.pilipili.common.view.RectangleImageView
            android:id="@+id/user_info_picture_iv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_8dp"
            android:layout_marginVertical="@dimen/dimen_8dp"
            android:layout_weight="2"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/dimen_8dp"
            android:layout_marginVertical="@dimen/dimen_8dp"
            android:layout_weight="3">

            <TextView
                android:id="@+id/user_info_picture_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_16sp"/>

            <TextView
                android:id="@+id/user_info_picture_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/dimen_12sp"/>

            <TextView
                android:id="@+id/user_info_picture_share_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_toEndOf="@id/user_info_picture_date_tv"
                android:textSize="@dimen/dimen_12sp"/>

            <ImageButton
                android:id="@+id/user_info_picture_delete_ibtn"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@null"
                android:src="@drawable/selector_delete"
                android:tint="@color/gray"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>