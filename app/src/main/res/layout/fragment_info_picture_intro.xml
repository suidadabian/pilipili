<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/info_picture_intro_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginVertical="@dimen/dimen_8dp"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16sp"/>

        <TextView
            android:id="@+id/info_picture_intro_intro_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_picture_intro_title_tv"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginVertical="@dimen/dimen_8dp"
            android:textSize="@dimen/dimen_14sp"/>

        <TextView
            android:id="@+id/info_picture_intro_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_picture_intro_intro_tv"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginVertical="@dimen/dimen_8dp"
            android:hint="@string/info_picture_intro_hint"
            android:textSize="@dimen/dimen_12sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/border_height_line_1px"
            android:layout_below="@id/info_picture_intro_date_tv"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:background="@color/border_gray"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/info_picture_intro_recommend_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>